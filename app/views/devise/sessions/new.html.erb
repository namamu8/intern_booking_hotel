<h3 class="account__title"><%= t ".account-title" %></h3>
<div class="input-group">
  <label class="input-group__label bold is-block">
    <%= t ".input-group-label" %>
  </label>
</div>
<%= form_for resource, as: resource_name,
  url: session_path(resource_name), class: "account__body" do |f| %>
  <div class="input-group">
    <%= f.email_field :email, autofocus: true,
      class: "input fix-borderRadius form-control", autocomplete: "email",
      placeholder: t(".email-input") %>
    <span class="input-group-text">
      <i class="far fa-envelope"></i>
    </span>
  </div>
  <div class="input-group">
    <%= f.password_field :password, class: "input fix-borderRadius
      form-control", autocomplete: "current-password",
      placeholder: t(".email-password") %>
    <span class="input-group-text">
      <i class="fas fa-lock"></i>
    </span>
  </div>
  <%= f.submit t(".submit"), class: "btn btn-login fix-borderRadius" %>
  <div class="center-xs">
    <div>
      <%= t ".reset" %> <%= link_to t(".link-reset"), "#",
        class: "color-i" %>
    </div>
    <div class="mt--30">
      <%= t ".sigin-in" %> <%= link_to t(".link-sigin"),
        "#", class: "color-i" %>
    </div>
  </div>
<% end %>
